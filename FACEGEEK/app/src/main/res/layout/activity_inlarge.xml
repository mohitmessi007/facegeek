<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohit.myolx.inlarge">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Button
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:id="@+id/del"
        android:background="#ff4c4c"
        android:text="@string/delete_from_your_upload"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:padding="0px"
        android:layout_margin="5sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/hex"
        android:layout_height="wrap_content"
        android:background="#E7FFE7"
        android:layout_below="@+id/del"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/inlarge"
            android:layout_width="300sp"
            android:layout_height="250sp"
            android:layout_gravity="center"
            android:contentDescription="@string/dikhabada"
            android:adjustViewBounds="true"
            android:clickable="true" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10sp"
            android:layout_below="@+id/hex"
            android:id="@+id/hex1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inlinetext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:textAllCaps="true"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
